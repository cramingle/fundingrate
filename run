#!/bin/bash
# Build and run script for Funding Rate Arbitrage Bot
# Usage: ./run [config_file]

# Set default config file path
CONFIG_FILE="config/bot_config.json"

# Colors for output
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
RED='\033[0;31m'
NC='\033[0m' # No Color

# Parse command line arguments
if [ $# -gt 0 ]; then
    CONFIG_FILE="$1"
fi

# Display header
echo -e "${GREEN}=========================================${NC}"
echo -e "${GREEN}   Funding Rate Arbitrage Bot Builder   ${NC}"
echo -e "${GREEN}=========================================${NC}"

# Check if build directory exists, if not create it
if [ ! -d "build" ]; then
    echo -e "${YELLOW}Creating build directory...${NC}"
    mkdir -p build
fi

# Change to build directory
cd build || { echo -e "${RED}Failed to enter build directory${NC}"; exit 1; }

# Run CMake
echo -e "${YELLOW}Configuring with CMake...${NC}"
cmake .. || { echo -e "${RED}CMake configuration failed${NC}"; exit 1; }

# Build the project
echo -e "${YELLOW}Building project...${NC}"
make -j$(nproc) || { echo -e "${RED}Build failed${NC}"; exit 1; }

# Set the library path
export LD_LIBRARY_PATH="$PWD:$LD_LIBRARY_PATH"

# Run the application
echo -e "${GREEN}Build successful! Starting application...${NC}"
echo -e "${YELLOW}Using config file: ${CONFIG_FILE}${NC}"
echo -e "${YELLOW}Press Ctrl+C to stop the application${NC}"
echo -e "${GREEN}=========================================${NC}"

# Run the application with the specified config file
./funding_bot -c "../${CONFIG_FILE}"

# Return to original directory
cd .. 